<!DOCTYPE html>
<html>
<head>
  <title>Railsblog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  <link href='http://fonts.googleapis.com/css?family=Dosis' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Codystar' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="clear"></div>

<header>
    <nav>
      <h1>The Creamsicle</h1>
      <h2>A Microblog for Popsicle Enthusiasts</h2>
    <ul>
  <% if current_user %>
     <li><%= link_to "Home", user_path(current_user.id)%></li>
     <li><%= link_to "Posts", root_path %></li>
     <li><%= link_to "Edit Profile", edit_user_path(current_user.id)%></li>
     
    <%= link_to "Sign Out", '/logout', method: :delete %>
  <% else %>
  <li><a href="/users/new">Sign Up</a></li>
  <li>
    <!-- <div id="signin_form"> -->
        <%= form_tag '/sessions', class: "form" do %>
        <%= text_field_tag :username, nil, placeholder: "username" %>
        <%= password_field_tag :password, nil, placeholder: "password" %>
        <%= submit_tag "Log In" %>
    <!-- </div> -->
  </li>
    <% end %>
  <% end %>
      </ul>
  </nav>
  <div class="clear"></div>
  <% if flash[:alert] %>
    <div class="flash">
      <%= flash[:alert]%>
    </div>
  <% end %>
</header>

<% if current_page?(:controller => 'users', :action => 'new') %>
  <div id="wrapper_large">
    <%= yield %>
  </div>
<% else %>
  <div id="wrapper">
    <%= yield %>
  </div>
<% end %>



</body>
</html>












