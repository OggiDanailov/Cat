<div class="profile">
  <div id="names">
    <h3>First name:</h3>
    <%= @user.fname %>
    <h3>Last name: </h3>
    <%= @user.lname %>
    <%= @user.username %>
    <%= @user.dob %>
    <%= @user.city %>
  </div>
</div>

<div class="new_post">
  <h1>Create new posts here</h1>
  <%= form_for @post do |p| %>
  <%= p.text_field :title %> 
  <%= p.text_field :body %>
  </br>
  <div id="submit">   
    <%= p.submit :post %>
  </div>
  <% end %>
</div>
  <% @user.posts.each do |post| %>
  <div class="post">
   <h2> <%= post.title %> </h2>
   <h3> <%= post.body %> </h3>
  <% end %>
  </div>

  <%= link_to "Delete Account", user_path(@user.id), method: :delete %>



